class zoo_animals:
    number_of_animals = 0
    food_supplies_for_mammals = 100
    food_supplies_for_fish = 50
    food_supplies_for_birds = 70

    def __init__(self, name, animal, activity, age, weight):
        
        
        
        self.name = name
        self.age = age
        self.animal = animal
        self.activity = activity
        self.weight = weight 
        zoo_animals.number_of_animals += 1
    

        

    def activities (self):
        print(f"I am {self.animal} and I can {self.activity}")
    
    def eat(self):
            if self.type == "mammals": 
                zoo_animals.food_supplies_for_mammals -= 5
            elif self.type == "birds": 
                zoo_animals.food_supplies_for_birds -= 3
            elif self.type == "fish": 
                zoo_animals.food_supplies_for_fish -= 2
            else:
                zoo_animals.food_supplies_for_mammals = 10000
                print(self.type)
            return  zoo_animals.food_supplies_for_mammals
            
                                               

class mammals(zoo_animals):
    def __init__(self, name, animal, activity, age, weight, type, the_length_of_jump):
        super().__init__(name, animal, activity, age, weight)
        self.type = type
        self.type = the_length_of_jump

    def tell_about_itself(self):
        print(f"Hi, my name is {self.name} I am {self.animal} and I am mammal")

class fish (zoo_animals):
    def __init__(self, name, animal, activity, age, weight, type, swimming_depth):
        super().__init__(name, animal, activity, age, weight)
        self.type = type 
        self.swimming_depth = swimming_depth

    def tell_about_itself(self):
        print(f"Hi, my name is {self.name} I am {self.animal} and I am fish")
    
    
class birds (zoo_animals):
    def __init__(self, name, animal, activity, age, weight, type, flight_altitude):
        super().__init__(name, animal, activity, age, weight)
        self.type = type 
        self.flight_altitude = flight_altitude


    def tell_about_itself(self):
        print(f"Hi, my name is {self.name} I am {self.animal} and I am bird")     

   


a1 = mammals ("John", "horse", "run", 17, 115, 5, "mammals")

a2 = mammals ("Bob", "cat", "meow-meow", 3, 12, 3, "mammals")

a3 = fish ("Ron", "tuna", "just chill", 1, 2, "fish", 300)

a4 = fish ("Rex", "shark", "just eat tunas", 15, 158, "fish", 700)

a5 = birds ("Ken", "eagle", "fyl as high as it can", 7, 40, "birds", 3000)

a6 = birds ("Jack", "sparrow", "capture ships", 35, 1, "birds", 300)



a2.tell_about_itself()
a2.activities()

a1.eat()
a2.eat()
a3.eat()
a6.eat()

print(zoo_animals.number_of_animals)
print(zoo_animals.food_supplies_for_mammals)
print(zoo_animals.food_supplies_for_birds)
print(zoo_animals.food_supplies_for_fish)

